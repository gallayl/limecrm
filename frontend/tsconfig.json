{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "pretty": true,
    "target": "ES2019",
    "moduleResolution": "Node",
    "module": "ES2015",
    "outDir": "dist",
    "composite": false,
    "jsx": "react",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src", "./typings"]
}
