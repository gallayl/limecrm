{
  "name": "frontend",
  "version": "0.0.1",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "single page application",
    "boilerplate",
    "react",
    "typescript"
  ],
  "scripts": {
    "build": "rimraf bundle && webpack --config webpack.prod.js",
    "start": "webpack-dev-server --progress --config webpack.prod.js",
    "bundle-analyzer": "webpack --config webpack.bundle-analyzer.js",
    "test": "jest --coverage",
    "lint": "eslint . --ext .tsx,.ts --cache"
  },
  "private": true,
  "license": "GPL-2.0",
  "devDependencies": {
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "css-loader": "^3.0.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^4.0.8",
    "file-loader": "^6.0.0",
    "fork-ts-checker-webpack-plugin": "^5.0.7",
    "html-webpack-plugin": "^4.3.0",
    "rimraf": "^3.0.0",
    "source-map-loader": "^1.0.1",
    "style-loader": "^1.0.0",
    "ts-config-webpack-plugin": "^2.0.0",
    "ts-jest": "^26.1.2",
    "ts-loader": "^8.0.0",
    "typescript": "^3.5.2",
    "url-loader": "^4.1.0",
    "webpack": "^4.32.2",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1",
    "webpack-merge": "^5.0.9"
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "tslib": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --ext .tsx,.ts --cache --fix",
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/test",
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/jest/cssTransform.js"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.css$": "<rootDir>/jest/cssTransform.js",
      "^.+\\.(png|jpg|gif)$": "<rootDir>/jest/fileTransform.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig-base.json"
      }
    },
    "testMatch": [
      "**/test/*.+(ts|tsx|js)",
      "**/test/**/*.+(ts|tsx|js)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest/setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "json",
      "html"
    ]
  }
}
